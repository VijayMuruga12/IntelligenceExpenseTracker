<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--    Login page image-->
    <ImageView
        android:id="@+id/loginpageimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/loginregisterimg"
        android:contentDescription="Illustration"
        android:scaleType="centerInside"
        android:layout_gravity="center"/>

    <!--    Login title-->
    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/loginsubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Login to continue using the app"
        android:textSize="20sp"
        android:textColor="#7E7E7E"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"/>

    <!--    Email label-->
    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:paddingStart="16dp"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"/>

<!--    Email input-->

    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/input_field"
        android:layout_marginEnd="24dp"
        android:hint="Enter your email"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:padding="16dp"/>

    <!--Password label-->
    <TextView
        android:id="@+id/password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:paddingStart="16dp"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <!--    Password input-->

    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/input_field"
        android:layout_marginEnd="24dp"
        android:hint="Enter your password"
        android:textColor="#000000"
        android:inputType="text"
        android:padding="16dp"/>

<!--    Forgot Password-->
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Forgot Password?"
        android:clickable="true"
        android:textSize="18sp"
        android:textColor="#007BFF"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginStart="220dp"
        android:minWidth="48dp"
        android:minHeight="48dp" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Login"
        android:clickable="true"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background" />

<!--    <TextView-->
<!--        android:id="@+id/Alternative_login"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:text="Or Login with"-->
<!--        android:textStyle="bold"-->
<!--        android:textAlignment="center"-->
<!--        android:textSize="18sp"-->
<!--        android:textColor="#7E7E7E"-->
<!--        android:layout_gravity="center_horizontal"/>-->

    <!-- Social Media Login Options -->
    <LinearLayout
        android:id="@+id/googlePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Google Icon -->
<!--        <ImageView-->
<!--            android:id="@+id/google_icon"-->
<!--            android:layout_width="38dp"-->
<!--            android:layout_height="38dp"-->
<!--            android:layout_marginEnd="16dp"-->
<!--            android:src="@drawable/google"-->
<!--            android:contentDescription="Google icon"-->
<!--            android:scaleType="centerInside" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

        <!-- "Don't have an account?" Text -->
        <TextView
            android:id="@+id/have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <!-- "Register" Link -->
        <TextView
            android:id="@+id/registeration_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Register"
            android:textColor="#007BFF"
            android:textStyle="bold"
            android:clickable="true"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp" />

    </LinearLayout>
</LinearLayout>









